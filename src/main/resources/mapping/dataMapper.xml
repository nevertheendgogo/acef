<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huangchao.acef.dao.DataMapper">

    <!--***********************************************************************  增 *************************************************************************************-->

    <!--普通文章上传-->
    <insert id="uploadOrdinaryArticle">
        insert into ordinary_article values(#{articleId},#{part},#{language},#{title},#{author},#{displayTime},#{content})
    </insert>

    <!--保存轮播图或协会介绍数据到数据库-->
    <insert id="uploadPicture">
        insert into picture values
        <foreach collection="imgPaths" item="url" separator=",">
            (default,#{part},#{url},default)
        </foreach>
    </insert>

    <!--//富文本图片保存-->
    <insert id="addRichTextPicture">
        insert into rich_text_picture values (default,#{articleId},#{url})
    </insert>

    <!--活动文章保存-->
    <insert id="addActivityArticle">
        insert into activityArticle values (#{articleId},#{part},#{language},#{title},#{author},#{displayTime},#{activityStartTime},#{activityEndTime},#{entryFormUrl},#{posterUrl},#{content})
    </insert>

    <!--保存用户信息-->
    <insert id="addUser">
        insert into user values(default,#{emailAccount},#{password},#{userName},#{phone},#{status}, default,default)
    </insert>

    <!--***************************************************************************  删  *********************************************************************************-->

    <!--根据普通文章id删除普通文章-->
    <delete id="deleteOrdinaryArticle">
        delete from ordinary_article where articleId in
        <foreach collection="array" item="articleId" separator="," open="(" close=")">
            articleId
        </foreach>
    </delete>

    <!--根据文章id删除活动文章-->
    <delete id="deleteActivityArticle">
        delete from activityArticle where articleId =#{articleId}
    </delete>

    <!--删除轮播图-->
    <delete id="deleteSlideshow">
        delete from picture where id =#{id}
    </delete>

    <!--删除中断富文本文章上传的图片-->
    <delete id="deleteRichTextPicture">
        delete from rich_text_picture where articleId =#{articleId}
    </delete>
    <!--***************************************************************************  查  *********************************************************************************-->

    <!--批量获取普通文章-->
    <select id="getOrdinaryArticle" resultType="OrdinaryArticle">

        <if test="language!=null">
            select * from ordinary_article where language =#{language} and part=#{part}
        </if>
        <if test="language==null">
            select articleId,title,author,displayTime from ordinary_article where part=#{part}
        </if>
    </select>

    <!--根据文章id获取普通文章-->
    <select id="getOneOrdinaryArticle" resultType="OrdinaryArticle">
        select * from ordinary_article where articleId=#{articleId}
    </select>

   <!--根据文章id获取活动文章-->
    <select id="getOneActivityArticle" resultType="ActivityArticle">
        select * from activityArticle where articleId=#{articleId}
    </select>

    <!--批量获取活动文章-->
    <select id="getActivityArticle" resultType="ActivityArticle">

        <if test="language!=null">
            select * from activityArticle where language =#{language} and part=#{part}
        </if>
        <if test="language==null">
            select articleId,title,author,displayTime from activityArticle where part=#{part}
        </if>
    </select>

    <!--判断articleId是否已经存在，即此文章是否已经上传-->
    <select id="existOrdinaryArticleId" resultType="String">
        select articleId from ordinary_article where articleId=#{articleId}
    </select>

    <!--判断articleId是否已经存在，即此文章是否已经上传-->
    <select id="existArticleId" resultType="String">
        select articleId from activityArticle where articleId=#{articleId}
    </select>

    <!--查找富文本文章上传的图片-->
    <select id="getRiceTextPictures" resultType="String">
        select url from rich_text_picture where articleId=#{articleId}
    </select>

    <!--轮播图/协会介绍链接获取-->
    <select id="getPicture" resultType="Slideshow">
        select id,url from picture where part=#{part}
    </select>
    <!--查找用户-->
    <select id="findUserByEmailAccount" resultType="User">
        select * from user where emailAccount = #{emailAccount}
    </select>
    <!--查找用户-->
    <select id="findUserById" resultType="User">
        select * from user where id = #{id}
    </select>
    <!--查找用户id-->
    <select id="findIdByEmailAccount" resultType="String">
        select id from user where emailAccount = #{emailAccount}
    </select>
    <!--***************************************************************************  改  *********************************************************************************-->

    <!--更新协会介绍图片-->
    <update id="activityArticle">
        update picture set url=#{url} where articleId=#{articleId}
    </update>

    <!--更新协会活动文章-->
    <update id="changeActivityArticle">
        update activityArticle set
        language=#{language},
        title=#{title},
        author=#{author},
        displayTime=#{displayTime},
        activityStartTime=#{activityStartTime},
        activityEndTime=#{activityEndTime},
        entryFormUrl=#{entryFormUrl},
        posterUrl=#{posterUrl},
        content=#{content}
        where articleId=#{articleId}
    </update>

</mapper>
